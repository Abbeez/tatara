<section
  id="customCollection"
  class="custom-collection__section scroll-trigger animate--slide-in"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container">
    <h2 class="collection-title">{{ section.settings.heading }}</h2>

    <div class="custom-collection-list">
      {% for block in section.blocks %}
        {% assign collection_handle = block.settings.boxed_collection %}
        {% if collection_handle != blank %}
          {% assign collection = collections[collection_handle] %}
          <div class="collection-container">
            <a href="{{ collection.url }}" alt="{{ collection.title }}">
              <div class="collection-card">
                <h3>{{ collection.title | truncate: 15 }}</h3>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <div class="cta-wrapper">
        <a href="{{ section.settings.cta_link }}" class="cta-button">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Collection List",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Explore Our Collections"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "Collections",
      "name": "Collection List",
      "limit": 12,
      "settings": [
        {
          "type": "collection",
          "id": "boxed_collection",
          "label": "Choose a collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection List"
    }
  ]
}
{% endschema %}

{% style %}
  /* ======== Custom Collection Styles ======== */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .collection-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .custom-collection-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }

  .collection-container {
    flex: 1 1 calc(20% - 16px);
    max-width: calc(20% - 16px);
  }

  .collection-container a {
    text-decoration: none;
  }

  .collection-card {
    background: #f9f9f9;
    padding: 12px;
    transition: transform 0.3s ease-in-out;
    border: 2px solid var(--custom-primary);
    border-radius: 6px;
  }

  .collection-card h3 {
    font-family: var(--font-body-family);
    font-size: 16px;
    font-weight: bold;
    color: #333;
  }

  .collection-card:hover {
    transform: scale(1.05);
  }

  /* CTA Button */
  .cta-wrapper {
    margin-top: 20px;
  }

  .cta-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: var(--custom-primary);
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  .cta-button:hover {
    background-color: #ff6600;
  }

  /* Responsive Adjustments */
  @media (max-width: 1024px) {
    .collection-container {
      flex: 1 1 calc(33.33% - 16px);
      max-width: calc(33.33% - 16px);
    }
  }

  @media (max-width: 768px) {
    .collection-container {
      flex: 1 1 calc(50% - 16px);
      max-width: calc(50% - 16px);
    }
  }

  @media (max-width: 480px) {
    .collection-container {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
{% endstyle %}
